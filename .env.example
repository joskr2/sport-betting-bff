# ========================================
# üîß Application Settings
# ========================================
APP_NAME="Sports Betting BFF"
APP_VERSION="1.0.0"
DEBUG=true
LOG_LEVEL=INFO
ENVIRONMENT=development

# ========================================
# üåê External API Configuration
# ========================================
# Replace with your actual external API URL
BACKEND_API_URL=https://your-api-domain.com
BACKEND_TIMEOUT=30

# ========================================
# üîí Security Configuration
# ========================================
# IMPORTANT: Generate a strong secret key for production
# You can use: python -c "import secrets; print(secrets.token_urlsafe(32))"
# Or: openssl rand -base64 32
JWT_SECRET=CHANGE-THIS-TO-A-SECURE-SECRET-KEY-IN-PRODUCTION
JWT_ALGORITHM=HS256

# ========================================
# üíæ Cache Configuration
# ========================================
ENABLE_CACHE=true
